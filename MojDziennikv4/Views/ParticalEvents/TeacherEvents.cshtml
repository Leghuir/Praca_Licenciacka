@model List<MojDziennikv4.Models.Event>
@{
    String[] opisy = new string[] { "Twórca wydarzenia", "Data początku", "Opis" };

}
<table>
    <tr>
        <td>@opisy[0]</td>
        <td>@opisy[1]</td>
        <td>@opisy[2]</td>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Employee.Surname</td>
            <td>@Model[i].Start_Time.Value.Date.ToShortDateString()</td>
            <td>@Model[i].Describe</td>
            @if (@i > 2)
            {
                @Html.ActionLink("Klknij aby zobaczyć więcej", "Index", "PupilOptions")
                break;
            }
        </tr>
    }
</table>