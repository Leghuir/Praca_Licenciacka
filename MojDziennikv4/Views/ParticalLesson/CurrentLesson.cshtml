@using MojDziennikv4.Models
@model ICollection<Lesson>
@if (Model.Count == 0)
{
    <p>Aktualnie nie ma lekcji</p>
}
else
{
    <p>Bieżąca lekcja</p>
    <p>Sala: @Model.ElementAt(0).Class_Room</p>
    <p>Nauczyciel: @Model.ElementAt(0).Employee.Surname</p>
    <p>Początek: @Model.ElementAt(0).Start_Time</p>
    <p>Przedmiot: @Model.ElementAt(0).Subject</p>

}
