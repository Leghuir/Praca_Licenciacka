@model MojDziennikv4.Models.Lesson

@{
    ViewBag.Title = "Usuń lekcje";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Usuń</h2>

<h3>Na pewno chcesz usunąć dany rekord?</h3>
<div>
    <h4>Lekcja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Dzień tygodnia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day_Of_Week)
        </dd>

        <dt>
            Godzina rozpoczęcia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start_Time)
        </dd>

        <dt>
            Numer sali
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class_Room.Class_Room_Number)
        </dd>

        <dt>
            Nazwisko nauczyciela
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.Surname)
        </dd>

        <dt>
            Numer klasy
        </dt>

        <dd>
            @Html.DisplayFor(model => model.School_Class.Class_Number)
        </dd>

        <dt>
            Nazwa przedmiotu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.Subject_Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            <a href="/Lessons/Index"><input type="button" value="Powrót do listy" class="btn btn-default" /></a>
        </div>
    }
</div>
