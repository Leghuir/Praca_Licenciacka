@model MojDziennikv4.Models.Note
@{
    ViewBag.Title = "AddNotes";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}


<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Note</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Pupil_Id">Nazwisko Ucznia</label>
            <div class="col-md-10">
                @Html.DropDownList("Pupil_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pupil_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Note_Date">*Data uwagi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Note_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Note_Date">Pozytywna</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Positve)
                    @Html.ValidationMessageFor(model => model.Positve, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Note_Date">Opis</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Describe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Describe, "", new { @class = "text-danger" })
            </div>
        </div>
        <p>* Data w formacie rok/miesiąc/dzień</p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
