@using MojDziennikv4.Models
@using MojDziennikv4.Extensions
@model IEnumerable<MojDziennikv4.Models.Mark>

@{
    ViewBag.Title = "Oceny";
    QueryOptions<String> queryOptions = (QueryOptions<String>)ViewBag.QueryOptions;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container" style="width:inherit">
    <div class="row">
        <div class="col-lg-6">
            <h2>Oceny</h2>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-3 text-right">
            @Html.BuildSearchableLink("Searchitem", "Wpisz szukaną fraze", "Index", "Employee.Surname", queryOptions)
        </div>
    </div>
</div>
<p>
    <a href="/Marks/Create"><input type="button" value="Stwórz nową ocene" class="btn btn-default" /></a>
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.BuildSortableLink("Wartość", "Index", "Value", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Waga", "Index", "Weight", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Opis", "Index", "Describe", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Data nadania", "Index", "Mark_Date", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Nadana przez", "Index", "Employee.Surname", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Przedmiot", "Index", "Subject.Subject_Name", queryOptions)
        </th>
        <th>
            @Html.BuildSortableLink("Nazwisko ucznia", "Index", "Pupil.Surname", queryOptions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Subject_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupil.Surname)
            </td>
            <td>
                <a href="/Marks/Edit/@item.Mark_Id" class="reference">Edytuj</a>|
                <a href="/Marks/Delete/@item.Mark_Id" class="reference">Usuń</a>
            </td>
        </tr>
    }

</table>
<div>
    <div>@Html.BuildNextPerviousLinks(queryOptions, "Index")</div>
</div>