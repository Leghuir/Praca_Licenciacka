@using MojDziennikv4.Models
@using MojDziennikv4.Extensions
@model IEnumerable<MojDziennikv4.Models.Subject>

@{
    ViewBag.Title = "Przedmioty";
    QueryOptions<String> queryOptions = (QueryOptions<String>)ViewBag.QueryOptions;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container" style="width:inherit">
    <div class="row mymargin">
        <div class="col-lg-6">
            <h2 style="margin-top:0px; margin-bottom:19px;">Przedmioty</h2>
            <a href="/Subjects/Create"><input type="button" value="Stwórz przedmiot" class="btn btn-default" /></a>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-3 text-right">
            @Html.BuildSearchableLink("Searchitem", "Wpisz Przedmiot", "Index", "Subject_Name", queryOptions)
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.BuildSortableLink("Nazwa przedmiotu", "Index", "Subject_Name", queryOptions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject_Name)
            </td>
            <td>
                <a href="/Subjects/Edit/@item.Subject_Id" class="reference">Edytuj</a>|
                <a href="/Subjects/Delete/@item.Subject_Id" class="reference">Usuń</a>
            </td>
        </tr>
    }

</table>
<div>
    <div>@Html.BuildNextPerviousLinks(queryOptions, "Index")</div>
</div>
@Styles.Render("~/Content/css");